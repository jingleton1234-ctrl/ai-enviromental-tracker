{
  "manifest_version": 3,
  "name": "AI Detector Companion",
  "description": "Automatically detects which AI service appears on the current tab and displays it to the user.",
  "version": "1.0.0",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_title": "AI Detector",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
